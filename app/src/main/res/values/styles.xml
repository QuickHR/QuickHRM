<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarSize">53sp</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="example_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">10sp</item>
        <item name="android:paddingLeft">20sp</item>
        <item name="android:paddingBottom">20sp</item>
        <item name="android:paddingRight">20sp</item>
    </style>

    <style name="horizontal_label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45sp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">5sp</item>
        <item name="android:weightSum">1</item>
    </style>

    <style name="text_label">
        <item name="android:layout_width">0sp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">0.5</item>
    </style>

    <style name="field_label">
        <item name="android:layout_width">0sp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">20sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="view_label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1sp</item>
        <item name="android:layout_marginRight">20sp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="header_label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">6sp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">5sp</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
    </style>

    <style name="image_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.95</item>
        <item name="android:layout_gravity">center</item>

    </style>

    <style name="image_layout_vertical">
        <item name="android:layout_width">0sp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:weightSum">1</item>
    </style>

    <style name="image_layout_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0sp</item>
        <item name="android:layout_weight">0.13</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">1</item>
        <item name="android:paddingLeft">10sp</item>
        <item name="android:paddingRight">10sp</item>
    </style>

    <style name="image_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.05</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="edit_Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1sp</item>
        <item name="android:layout_marginRight">20sp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="address_label_one">
        <item name="android:layout_width">0sp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginRight">20sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_weight">0.4</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="address_label_two">
        <item name="android:layout_width">0sp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_weight">0.1</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
