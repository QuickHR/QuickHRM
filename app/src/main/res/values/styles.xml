<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0sp</item>
        <item name="android:layout_weight">0.15</item>
        <item name="android:layout_marginTop">15sp</item>
        <item name="android:paddingLeft">15sp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/shape</item>
        <item name="android:textColor">#000000</item>

    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0sp</item>
        <item name="android:layout_weight">0.15</item>
        <item name="android:layout_marginTop">15sp</item>
        <item name="android:paddingLeft">15sp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/loginshape</item>
        <item name="android:textColor">@color/colorPrimary</item>

    </style>

    <style name="TextView">
        <item name="android:layout_width">0sp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center|right</item>

    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay"
           parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    android:layout_width="0sp"
    android:layout_height="match_parent"
    android:layout_weight="0.4"
    android:text="Register"
    android:textColor="#FFFFFF"
    android:gravity="center"
</resources>
