<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#FFFFFF"
    android:padding="10sp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.08"
        android:background="#E6E6FA"
        android:text="Quick HR"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/colorAccent"
        android:id="@+id/textView7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.08"
        android:layout_marginTop="10sp"
        android:orientation="horizontal"
        android:paddingLeft="5sp"
        android:background="#E6E6FA"
        android:weightSum="1">

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="center|left"
            android:text="Leave Type"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.175"
            android:gravity="center"
            android:text="Roll Over"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.175"
            android:gravity="center"
            android:text="Earned"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.175"
            android:gravity="center"
            android:text="Used"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.175"
            android:gravity="center"
            android:text="Balanced"
            android:textColor="@color/colorAccent"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:background="#B0C4DE"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.09"
        android:orientation="horizontal"
        android:paddingLeft="5sp"
        android:background="#FFFFFF"
        android:weightSum="1">

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="center|left"
            android:text="Vacation Leave"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.175"
            android:gravity="center"
            android:text="0"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.175"
            android:gravity="center"
            android:text="15"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.175"
            android:gravity="center"
            android:text="4"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.175"
            android:gravity="center"
            android:text="11"
            android:textColor="#000000"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:background="#B0C4DE"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.08"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:paddingLeft="5sp"
        android:weightSum="1">

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="center|left"
            android:text="Medical Leave"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.175"
            android:gravity="center"
            android:text="0"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.175"
            android:gravity="center"
            android:text="15"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.175"
            android:gravity="center"
            android:text="4"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.175"
            android:gravity="center"
            android:text="11"
            android:textColor="#000000"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:background="#B0C4DE"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.08"
        android:paddingLeft="5sp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:weightSum="1">

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="center|left"
            android:text="Personal Leave"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.175"
            android:gravity="center"
            android:text="0"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.175"
            android:gravity="center"
            android:text="15"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.175"
            android:gravity="center"
            android:text="4"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.175"
            android:gravity="center"
            android:text="11"
            android:textColor="#000000"/>

    </LinearLayout>


</LinearLayout>