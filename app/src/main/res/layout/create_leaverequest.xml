<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#FFFFFF"
    android:padding="10sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.22"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.3"
            android:gravity="center"
            android:paddingLeft="5sp"
            android:background="#E6E6FA"
            android:textColor="@color/colorPrimary"
            android:text="Date"
            android:id="@+id/textView6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.35"
            android:weightSum="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:paddingLeft="5sp"
                android:gravity="center|left"
                android:text="From"/>

            <TextView
                android:id="@+id/from_date"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:gravity="center|left"
                android:paddingLeft="5sp"
                android:paddingRight="10sp"
                android:drawableRight="@drawable/calendar"
                android:textColor="#000000"
                android:text="2016 - 11 - 02"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5sp"
            android:background="#B0C4DE"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.35"
            android:weightSum="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center|left"
                android:paddingLeft="5sp"
                android:text="To"/>

            <TextView
                android:id="@+id/to_date"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:textColor="#000000"
                android:paddingLeft="5sp"
                android:paddingRight="10sp"
                android:drawableRight="@drawable/calendar"
                android:gravity="center|left"
                android:text="2016 - 11 - 02"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:background="#B0C4DE"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.45"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.2"
            android:weightSum="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:paddingLeft="5sp"
                android:gravity="center|left"
                android:text="Contact\nDuring Leave"
                android:id="@+id/textView3" />

            <EditText
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:gravity="center|left"
                android:paddingLeft="5sp"
                android:textColor="#000000"
                android:background="#FFFFFF"
                android:inputType="textWebEditText"
                android:textSize="14sp"
                android:hint="Name or Phone Number"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5sp"
            android:background="#B0C4DE"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.2"
            android:weightSum="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:paddingLeft="5sp"
                android:gravity="center|left"
                android:text="Status"/>

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:gravity="center|left"
                android:textColor="#000000"
                android:paddingLeft="5sp"
                android:text="Open"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5sp"
            android:background="#B0C4DE"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.2"
            android:weightSum="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center|left"
                android:paddingLeft="5sp"
                android:text="Leave Type"/>

            <Spinner
                android:id="@+id/spinner_leavetype"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:textColor="#000000"
                android:gravity="center|left"
                android:text=""/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5sp"
            android:background="#B0C4DE"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.2"
            android:weightSum="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center|left"
                android:paddingLeft="5sp"
                android:text="Reason for\nLeave"/>

            <Spinner
                android:id="@+id/spinner_reason_forleave"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:textColor="#000000"
                android:gravity="center|left"
                android:text=""/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5sp"
            android:background="#B0C4DE"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.2"
            android:weightSum="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center|left"
                android:paddingLeft="5sp"
                android:text="Approver"/>

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:textColor="#000000"
                android:gravity="center|left"
                android:paddingLeft="5sp"
                android:text="Exceloid"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.25"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.25"
            android:gravity="center"
            android:background="#E6E6FA"
            android:paddingLeft="5sp"
            android:textColor="@color/colorPrimary"
            android:text="Notes"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="0.75"
                android:gravity="left"

                android:padding="5sp"
                android:hint="enter text"
                android:textSize="14sp"
                android:layout_marginTop="5sp"
                android:inputType="textAutoComplete"
                android:textColor="#000000"
                android:background="@drawable/shape"/>

    </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.08"
            android:text="Submit"
            android:layout_marginTop="10sp"
            android:textColor="#FFFFFF"
            android:background="@color/colorPrimary"/>

</LinearLayout>