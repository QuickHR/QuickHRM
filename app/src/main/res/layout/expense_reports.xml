<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20sp"
    android:weightSum="1"
    android:background="#E6E6FA"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.45"
        android:orientation="horizontal"
        android:layout_gravity="">

        <LinearLayout
            android:id="@+id/expenses"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:layout_margin="5sp"
            android:gravity="center">

            <ImageView
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:background="@drawable/expense"
                android:id="@+id/imageView5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Expenses\n"
                android:layout_marginTop="10sp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/expenses_reports"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:layout_margin="5sp"
            android:gravity="center">

            <ImageView
                android:layout_width="65sp"
                android:layout_height="65sp"
                android:background="@drawable/email"
                android:id="@+id/imageView2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Expenses &amp;\nReports"
                android:layout_marginTop="10sp"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.45"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/new_expenses"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:layout_margin="5sp"
            android:background="#FFFFFF"
            android:gravity="center">

            <ImageView
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:background="@drawable/expenseplus"
                android:id="@+id/imageView3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Expenses\n"
                android:layout_marginTop="10sp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/newexpenses_reports"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:layout_margin="5sp"
            android:gravity="center">

            <ImageView
                android:layout_width="65sp"
                android:layout_height="65sp"
                android:background="@drawable/emailplus"
                android:id="@+id/imageView4" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Expenses &amp;\nReports"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:id="@+id/textView8" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>