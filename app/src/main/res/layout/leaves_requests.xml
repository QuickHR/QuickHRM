<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E6E6FA"
    android:padding="20sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.45"
            android:orientation="horizontal"
            android:layout_gravity="">

            <LinearLayout
                android:id="@+id/createLeave_Request"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:layout_margin="5sp"
                android:gravity="center">

                <ImageView
                    android:layout_width="70sp"
                    android:layout_height="70sp"
                    android:background="@drawable/ic_open_in_new_black_24dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Create Leave\nRequest"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_Request"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:layout_margin="5sp"
                android:gravity="center">

                <ImageView
                    android:layout_width="70sp"
                    android:layout_height="70sp"
                    android:background="@drawable/ic_visibility_black_24dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View\nRequests"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.45"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/leave_Balance"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:layout_margin="5sp"
                android:background="#FFFFFF"
                android:gravity="center">

                <ImageView
                    android:layout_width="70sp"
                    android:layout_height="70sp"
                    android:background="@drawable/ic_timelapse_black_24dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Leave\nBalance"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/approve_Requests"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:layout_margin="5sp"
                android:gravity="center">

                <ImageView
                    android:layout_width="70sp"
                    android:layout_height="70sp"
                    android:background="@drawable/ic_check_box_black_24dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Approve\nRequests"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/leave_Calender"
        android:layout_width="130sp"
        android:layout_height="130sp"
        android:background="@drawable/leave_circle"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/imah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ic_event_note_black_24dp"/>

        <TextView
            android:layout_below="@+id/imah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Leave\nCalender"
            android:gravity="center"
            android:textColor="#FFFFFF"/>

    </LinearLayout>
</RelativeLayout>