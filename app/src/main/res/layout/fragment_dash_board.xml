<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:weightSum="1"
    android:padding="5sp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:gravity="center"
        android:layout_weight="0.3"
        android:background="@drawable/shape"
        android:weightSum="1"
        android:layout_marginTop="10sp"
        android:padding="10sp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.35"
            android:padding="5sp"
            android:gravity="center"
            android:background="@drawable/thickshape">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/quickhrnew"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center|left"
            android:paddingLeft="15sp"
            android:layout_weight="0.6">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome"
                android:textSize="12sp"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="QuickHR Mobile App"
                android:textColor="#000000"
                android:layout_marginTop="5sp"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Emp Id.ABC123"
                android:textColor="@android:color/holo_orange_dark"
                android:layout_marginTop="5sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10sp"
                android:padding="10sp"
                android:background="@drawable/shape">

                <Button
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:background="#04bd10"
                    android:layout_weight="0.5"
                    android:text="Clock In"
                    android:layout_marginRight="5sp"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"/>

                <Button
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:background="#bf0000"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="5sp"
                    android:textAllCaps="false"
                    android:text="Clock Out"
                    android:textColor="#ffffff"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.7"
        android:background="@drawable/thickshape"
        android:layout_marginTop="10sp"
        android:padding="10sp"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.35"
            android:weightSum="1"
            android:gravity="center"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:orientation="vertical"
                android:background="#92cdd1"
                android:layout_margin="5sp"
                android:gravity="center">

                <ImageView
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:background="@drawable/ic_portrait_black_24dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:orientation="vertical"
                android:background="#edb693"
                android:layout_margin="5sp"
                android:gravity="center">

                <ImageView
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:background="@drawable/leave_calendar"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:orientation="vertical"
                android:background="#f5e7b0"
                android:layout_margin="5sp"
                android:gravity="center">

                <ImageView
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:background="@drawable/claims_shape"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:gravity="center"
            android:layout_weight="0.1"
            android:layout_marginTop="15sp">

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:gravity="center|top"
                android:textColor="#ba7956"
                android:text="View profile"/>

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:gravity="center|top"
                android:textColor="#ba7956"
                android:text="Apply Leave"/>

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:gravity="center|top"
                android:textColor="#ba7956"
                android:text="Apply Claim"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.35"
            android:layout_marginTop="10sp">

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:orientation="vertical"
                android:background="#ed9593"
                android:layout_margin="5sp"
                android:gravity="center">

                <ImageView
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:background="@drawable/ic_event_note_black_24dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:orientation="vertical"
                android:background="#95dced"
                android:layout_margin="5sp"
                android:gravity="center">

                <ImageView
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:background="@drawable/ic_portrait_black_24dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:orientation="vertical"
                android:background="#9099f0"
                android:layout_margin="5sp"
                android:gravity="center">

                <ImageView
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:background="@drawable/white"
                    android:id="@+id/imageView2"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.1"
            android:layout_marginTop="10sp">

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:gravity="center|top"
                android:textColor="#ba7956"
                android:text="Test Item"/>

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:gravity="center|top"
                android:textColor="#ba7956"
                android:text="View Projects"/>

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:gravity="center|top"
                android:textColor="#ba7956"
                android:text="Test Item"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
