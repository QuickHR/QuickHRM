<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aea09e"
    android:fillViewport="true">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:background="#ebebeb"
            android:weightSum="1"
            android:padding="5sp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="110sp"
                android:layout_weight="0.32"
                android:gravity="center"
                android:background="@drawable/thickshape">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:background="@mipmap/ic_launcher"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center|left"
                android:paddingLeft="10sp"
                android:layout_weight="0.6">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome"
                    android:typeface="serif"
                    android:id = "@+id/dashboard_home"
                    android:textSize="12sp"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:typeface="sans"
                    android:text="Kiran Nalla"
                    android:textColor="#000000"
                    android:layout_marginTop="5sp"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:typeface="sans"
                    android:textSize="14sp"
                    android:text="Emp Id. ABC 123"
                    android:textColor="#a5721e"
                    android:layout_marginTop="5sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="45sp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="5sp"
                    android:padding="7sp">

                    <Button
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:background="#04bd10"
                        android:layout_weight="0.5"
                        android:text="Clock In"
                        android:layout_marginRight="5sp"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"/>

                    <Button
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:background="#ff0000"
                        android:layout_weight="0.5"
                        android:layout_marginLeft="5sp"
                        android:textAllCaps="false"
                        android:text="Clock Out"
                        android:textColor="#ffffff"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_weight="0.8"
            android:padding="5sp"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="0.35"
                android:weightSum="1"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/viewProfile"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:orientation="vertical"
                    android:background="@drawable/dashboard_profile"
                    android:layout_margin="5sp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:background="@drawable/ic_portrait_black_24dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/applyLeave"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:orientation="vertical"
                    android:background="@drawable/dashboard_leave"
                    android:layout_margin="5sp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:background="@drawable/leave_calendar"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/applyClaim"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:orientation="vertical"
                    android:background="@drawable/dashboard_claim"
                    android:layout_margin="5sp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:background="@drawable/claims_shape"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:gravity="center"
                android:layout_weight="0.1"
                android:layout_marginTop="10sp">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:gravity="center|top"
                    android:textColor="#373737"
                    android:typeface="serif"
                    android:text="View profile"/>

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:gravity="center|top"
                    android:textColor="#373737"
                    android:typeface="serif"
                    android:text="Apply Leave"/>

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:gravity="center|top"
                    android:textColor="#373737"
                    android:typeface="serif"
                    android:text="Apply Claim"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="0.35"
                android:layout_marginTop="10sp">

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:orientation="vertical"
                    android:background="@drawable/dashboard_timesheet"
                    android:layout_margin="5sp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:background="@drawable/white"
                        android:id="@+id/imageView2"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:orientation="vertical"
                    android:background="@drawable/dashboard_reports"
                    android:layout_margin="5sp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:background="@drawable/ic_event_note_black_24dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:orientation="vertical"
                    android:background="@drawable/dashboard_projects"
                    android:layout_margin="5sp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:background="@drawable/ic_view_projects"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="0.1"
                android:layout_marginTop="10sp">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:gravity="center|top"
                    android:textColor="#373737"
                    android:typeface="serif"
                    android:text="Add Timesheet"/>

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:gravity="center|top"
                    android:textColor="#373737"
                    android:typeface="serif"
                    android:text="View Pay Slip"/>

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:gravity="center|top"
                    android:textColor="#373737"
                    android:typeface="serif"
                    android:text="View Projects"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
