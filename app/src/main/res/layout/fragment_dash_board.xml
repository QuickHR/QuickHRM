<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10sp"
    tools:context="com.example.exceloid_android.quickhrmobileapp.DashBoardFragment">>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:gravity="center"
            android:paddingLeft="20sp"
            android:orientation="horizontal">

            <!--<LinearLayout
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:background="@drawable/leave_circle">-->

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:background="@drawable/ic_tag_faces_black_24dp"/>
            <!--</LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center|left"
                android:paddingLeft="15sp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="QuickHR Mobile App"
                    android:textColor="#000000"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="quickhr@gmail.com"
                    android:layout_marginTop="10sp"
                    android:textSize="14sp"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="last login : 09.30 pm"
                    android:textSize="12sp"
                    android:layout_marginTop="10sp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
