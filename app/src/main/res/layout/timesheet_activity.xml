<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.09"
            android:orientation="horizontal"
            android:weightSum="1"
            android:gravity="center"
            android:background="#E6E6FA">

            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:id="@+id/textView2" />

            <Spinner
                android:id="@+id/timesheet_spinner"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:layout_gravity="center"
                android:spinnerMode="dropdown"/>

            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_weight="0.15"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.04"
            android:orientation="horizontal"
            android:weightSum="0.7"
            android:layout_marginTop="5sp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:text="M"
                android:gravity="center"/>

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:text="T"
                android:gravity="center"/>

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:text="W"
                android:gravity="center"/>

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:text="T"
                android:gravity="center"/>

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:text="F"
                android:gravity="center"/>

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:text="S"
                android:gravity="center"/>

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:text="S"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/textview_layout"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.1"
            android:orientation="horizontal"
            android:weightSum="0.7"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:padding="5sp"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:text="1"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/leave_circle"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:padding="5sp"
                android:gravity="center">

                <TextView
                    android:id="@+id/two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:text="2"
                    android:background="@drawable/leave_circle"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:padding="5sp">

                <TextView
                    android:id="@+id/three"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:text="3"
                    android:background="@drawable/leave_circle"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:padding="5sp">

                <TextView
                    android:id="@+id/four"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:text="4"
                    android:background="@drawable/leave_circle"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:padding="5sp">

                <TextView
                    android:id="@+id/five"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:text="5"
                    android:background="@drawable/leave_circle"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:padding="5sp">

                <TextView
                    android:id="@+id/six"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:text="6"
                    android:background="@drawable/leave_circle"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:padding="5sp">

                <TextView
                    android:id="@+id/seven"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:text="7"
                    android:background="@drawable/leave_circle"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/showing_record"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.75"
            android:weightSum="0.75"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="0.05"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:text="Client/Project/Task"
                    android:paddingLeft="10sp"
                    android:gravity="center|left"
                    android:textColor="@color/colorAccent"
                    android:layout_weight="0.75"/>

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:text="Time"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:layout_weight="0.25"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5sp"
                android:layout_marginTop="2sp"
                android:background="#B0C4DE"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:weightSum="1"
                android:layout_weight="0.45"
                android:orientation="horizontal">

                <ListView
                    android:id="@+id/record_listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:dividerHeight="0.1sp"
                    android:divider="#B0C4DE">

                </ListView>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5sp"
                android:layout_marginTop="2sp"
                android:background="#B0C4DE"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:weightSum="1"
                android:layout_marginTop="5sp"
                android:layout_weight="0.08"
                android:background="#E6E6FA"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_add_record"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.45"
                    android:drawableLeft="@drawable/ic_add_black_24dp"
                    android:text=" Add Record"
                    android:typeface="serif"
                    android:gravity="center|left"
                    android:paddingLeft="10sp"
                    android:textSize="14sp"
                    android:textColor="@color/colorAccent"/>

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:paddingLeft="10sp"
                    android:layout_weight="0.3"
                    android:text="Total"
                    android:gravity="center|right"
                    android:paddingRight="15sp"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/total_time"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:text="0.0"
                    android:textColor="@color/colorAccent"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="0.065"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:paddingLeft="10sp"
                android:weightSum="1">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.37"
                    android:gravity="center|left"
                    android:text="Status: Draft"/>

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.38"
                    android:text="Weekely Time"
                    android:gravity="center|right"
                    android:paddingRight="15sp"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/weekely_total_time"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:text="0.0"
                    android:textColor="@color/colorAccent"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:layout_marginTop="10sp"
                android:layout_weight="0.1">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Send For Approval"
                    android:background="@color/colorAccent"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:id="@+id/sendfor_approval" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.SwipeRefreshLayout>