<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#fbfbfb"
    android:padding="10sp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.07"
        android:gravity="center"
        android:paddingLeft="5sp"
        android:background="@color/colorSecondary"
        android:textColor="#FFFFFF"
        android:text="Claim Application"
        android:id="@+id/textView6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.09"
        android:weightSum="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:paddingLeft="5sp"
            android:gravity="center|left"
            android:typeface="serif"
            android:textColor="@color/colorHeading"
            android:text="From Date"/>

        <TextView
            android:id="@+id/from_date"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:gravity="center|left"
            android:paddingLeft="5sp"
            android:paddingRight="10sp"
            android:drawableRight="@drawable/calendar"
            android:textColor="#000000"
            android:text="2016 - 11 - 02"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:background="#B0C4DE"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.09"
        android:weightSum="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:gravity="center|left"
            android:typeface="serif"
            android:textColor="@color/colorHeading"
            android:paddingLeft="5sp"
            android:text="To Date"/>

        <TextView
            android:id="@+id/to_date"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:textColor="#000000"
            android:paddingLeft="5sp"
            android:paddingRight="10sp"
            android:drawableRight="@drawable/calendar"
            android:gravity="center|left"
            android:text="2016 - 11 - 02"/>

    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:background="#B0C4DE"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.09"
        android:weightSum="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:paddingLeft="5sp"
            android:gravity="center|left"
            android:typeface="serif"
            android:textColor="@color/colorHeading"
            android:text="Claim Type"
            android:id="@+id/textView3" />

        <Spinner
            android:id="@+id/claimSpinner"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:textColor="#000000"
            android:gravity="center|left"
            android:text=""/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:background="#B0C4DE"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.09"
        android:weightSum="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:gravity="center|left"
            android:typeface="serif"
            android:textColor="@color/colorHeading"
            android:paddingLeft="5sp"
            android:text="Projects"/>

        <Spinner
            android:id="@+id/claimProjects"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:textColor="#000000"
            android:gravity="center|left"
            android:text=""/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:background="#B0C4DE"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.09"
        android:weightSum="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:paddingLeft="5sp"
            android:gravity="center|left"
            android:typeface="serif"
            android:textColor="@color/colorHeading"
            android:text="Amount"/>

        <EditText
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:gravity="center|left"
            android:textColor="#000000"
            android:paddingLeft="5sp"
            android:textSize="14sp"
            android:background="#FFFFFF"
            android:hint="Enter Amount"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:background="#B0C4DE"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:typeface="serif"
        android:textColor="@color/colorHeading"
        android:paddingLeft="5sp"
        android:text="Upload Document"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.17"
        android:weightSum="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:gravity="center|left"
            android:paddingLeft="5sp"
            android:text="Approver"
            android:background="@drawable/ic_android_black_24dp"/>

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center|left"
            android:paddingLeft="5sp"
            android:visibility="invisible"
            android:text="Upload Document"/>

        <Button
            android:id="@+id/button"
            android:layout_width="0sp"
            android:layout_height="35sp"
            android:layout_weight="0.45"
            android:background="@color/colorSecondary"
            android:gravity="center"
            android:paddingLeft="5sp"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:text="Choose File"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:weightSum="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:gravity="center"
            android:textColor="@color/buttonColor"
            android:text="Google Drive"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:gravity="center"
            android:textColor="@color/buttonColor"
            android:text="Drop Box" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:gravity="center"
            android:textColor="@color/buttonColor"
            android:text="Internal Storage" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.07"
        android:gravity="center"
        android:background="@color/colorSecondary"
        android:textColor="#FFFFFF"
        android:text="Remarks"
        android:id="@+id/textView2"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.1"
        android:gravity="left"
        android:padding="5sp"
        android:hint="Claim Description"
        android:textSize="14sp"
        android:layout_marginTop="5sp"
        android:inputType="textAutoComplete"
        android:textColor="#000000"
        android:background="@drawable/shape"
        android:id="@+id/editText2"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.08"
        android:text="Submit Claim Request"
        android:layout_marginTop="5sp"
        android:textColor="#FFFFFF"
        android:background="@color/colorSubmit"/>

</LinearLayout>