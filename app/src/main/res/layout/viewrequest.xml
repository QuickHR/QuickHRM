        android:weightSum="1"
        android:layout_marginTop="5sp"
        android:paddingLeft="10sp"
        android:paddingRight="5sp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.07"
