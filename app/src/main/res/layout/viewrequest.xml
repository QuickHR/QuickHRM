        android:paddingLeft="10sp"
        android:background="#E6E6FA"
        android:textColor="@color/colorAccent"
        android:id="@+id/textView4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.93"
