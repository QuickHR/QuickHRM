                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="center|left"
                android:text="1 days - Medical Leave"/>

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
