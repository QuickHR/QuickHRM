<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:padding="0sp"
    android:gravity="center"
    android:background="@color/color1">

    <ImageView
        android:layout_width="220sp"
        android:layout_height="80sp"
        android:layout_marginTop="-20sp"
        android:layout_marginBottom="20sp"
        android:background="@drawable/quickhrnew"/>

    <EditText
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:background="@drawable/shape"
        android:layout_marginTop="25sp"
        android:paddingLeft="10sp"
        android:hint="User ID or email"
        android:typeface="serif"
        android:inputType="text"
        android:drawablePadding="10sp"
        android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
        android:layout_weight="0.12"/>

    <EditText
        android:id="@+id/passWord"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:background="@drawable/shape"
        android:layout_marginTop="3sp"
        android:paddingLeft="10sp"
        android:hint="Password"
        android:inputType="textWebPassword"
        android:typeface="serif"
        android:drawablePadding="10sp"
        android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
        android:layout_weight="0.12" />

    <Button
        android:id="@+id/forgotPassword"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.1"
        android:layout_marginTop="25sp"
        android:text="I forgot my UserID or password"
        android:textSize="14sp"
        android:textColor="#333"
        android:textAllCaps="false"
        android:typeface="serif"
        android:paddingLeft="10sp"
        android:layout_gravity="start"
        android:textAlignment="viewStart"
        android:drawableRight="@drawable/ic_menu_send"
        android:background="@drawable/shape"/>

    <Button
        android:id="@+id/quickHrLogin"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.12"
        android:layout_marginTop="25sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:text="Sign in"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:typeface="serif"
        android:background="@drawable/loginshape"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_marginTop="50sp"
        android:textColor="#ffffff"
        android:typeface="serif"
        android:textSize="12sp"
        android:paddingLeft="50sp"
        android:paddingRight="50sp"
        android:text="By tapping Sign in you agree to our License Agreement and Privacy Statement"/>

</LinearLayout>
